<%= form_for (@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label "mytask" %><br />
    <%= f.text_field :mytask %>
  </div>
  <div class="field">
    <%= f.label "created date"%><br />
    <%= f.datetime_select :created_date %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    complete<%= f.radio_button :status, "Complete" %>
    pending<%= f.radio_button :status, "Pending" %>
  </div>
<%= f.hidden_field :user_id,:value => current_user.id %>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
